= content_for :head do
  %title
    = t(:title_pictures_show)
    \-
    = t(:application_name)

.grid_10
  .grid_10.alpha.omega
    %span.pictureName
      - if current_user && current_user.admin?
        = on_the_spot_edit @picture, :name, :tooltip => "No title defined, click here to edit."
      - else
        = @picture.name
  .clear

  .grid_10.alpha.omega
    = image_tag get_picture_url(@picture.photo, :normal)
  .clear

  .grid_10.alpha.omega
    - if current_user && current_user.admin?
      = on_the_spot_edit @picture, :description, :tooltip => "No description available, click here to edit.", :type => :textarea
    - else
      = @picture.description
  .clear

.grid_5.prefix_1
  - if !@picture.exif.no_exif
    = render :partial => "map"
  #navigation
    = render :partial => "navigation"
  #pictureInfos
    = render :partial => "infos"
  #exif
    - if !@picture.exif.no_exif
      = render :partial => "exif"
.clear